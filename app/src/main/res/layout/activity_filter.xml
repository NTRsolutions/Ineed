<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/filter_spin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Job Type"
    android:textStyle="bold"
    android:textSize="@dimen/pf_15_txt_size"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_jobtype"
        android:layout_margin="3dp"
        >
    </Spinner>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Experience"
        android:textStyle="bold"
        android:textSize="@dimen/pf_15_txt_size"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_experience"
        >
    </Spinner>
    <TextView
        android:id="@+id/nt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notice Period"
        android:textStyle="bold"
        android:textSize="@dimen/pf_15_txt_size"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_noticeperiod"
        >
    </Spinner>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CTC"
        android:textStyle="bold"
        android:textSize="@dimen/pf_15_txt_size"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_ctc"
        >
    </Spinner>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textStyle="bold"
        android:textSize="@dimen/pf_15_txt_size"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_age"
        >
    </Spinner>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textStyle="bold"
        android:textSize="@dimen/pf_15_txt_size"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_gender"
        >
    </Spinner>
    </LinearLayout>
    <Button
        android:layout_marginTop="@dimen/pf_15_txt_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search1"
        android:layout_below="@+id/filter_spin"
        android:gravity="center"
        android:background="@color/appbasecolor"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        />
</RelativeLayout>
